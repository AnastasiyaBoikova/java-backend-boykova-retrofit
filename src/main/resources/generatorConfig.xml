<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--            Путь к файлу на локальном компьютере-->
    <classPathEntry
            location="src/main/resources/postgresql-42.2.19.jar"/>

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="org.postgresql.Driver"
                        connectionURL="jdbc:postgresql://80.78.248.82:5434/coursedb"
                        userId="postgres"
                        password="postgres">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
<!--                                    Папка где будут лежат модели-->
        <javaModelGenerator targetPackage="ru.geekbrains.java4.lesson6.db.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!--                                    Папка где будут лежат mapper-->
        <sqlMapGenerator targetPackage="ru.geekbrains.java4.lesson6.db.mapper.xml" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!--                                    Папка где будут лежат dao-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="ru.geekbrains.java4.lesson6.db.dao"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="categories">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey type="pre" column="id" sqlStatement="JDBC" identity="false"/>
            <!--                        <columnOverride column="id" property="category_id" />-->
            <!--                        <ignoreColumn column="FRED" />-->
            <!--                        <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" />-->
        </table>
        <table tableName="products">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey type="pre" column="id" sqlStatement="JDBC" identity="false"/>
            <!--            <columnOverride column="DATE_FIELD" property="startDate" />-->
            <!--            <ignoreColumn column="FRED" />-->
            <!--            <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" />-->
        </table>
    </context>
</generatorConfiguration>